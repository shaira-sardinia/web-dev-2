const { body, validationResult } = require("express-validator");

const validateWorkshop = [
  body("name").trim().notEmpty(),
  body("description").trim().notEmpty(),
  body("numOfSessions").trim().notEmpty(),
  body("price").trim().notEmpty().toFloat(),
];

const validateClass = [
  body("name").trim().notEmpty(),
  body("description").trim().notEmpty(),
  body("schedule").trim().notEmpty(),
  body("price").trim().notEmpty().toFloat(),
];

const validateOrganiser = [
  body("name").trim().notEmpty(),
  body("email").trim().notEmpty(),
  body("phone").trim().notEmpty().toFloat(),
  body("bio").trim().notEmpty(),
];

const validateUser = [];

module.exports = { validateWorkshop, validateClass, validateOrganiser, validateUser };
