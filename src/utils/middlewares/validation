const { body, validationResult } = require("express-validator");

const validateWorkshop = [
  body("name").trim().notEmpty(),
  body("description").trim().notEmpty(),
  body("numOfSessions").trim().notEmpty(),
  body("price").trim().notEmpty().toFloat(),
];

