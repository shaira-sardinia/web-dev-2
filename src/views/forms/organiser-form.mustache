<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    {{#user}} {{> authHeader }} {{/user}} {{^user}} {{> header }} {{/user}}     {{> flash}}
    <div>
      <div>
        {{#errors}}
        <div class="alert alert-danger" role="alert">{{errors}}</div>
        {{/errors}}
      </div>

      <div class="mt-4 pd-3">
        <nav aria-label="breadcrumb">
          <a href="/dashboard" class="breadcrumb-text">Back</a>
        </nav>
      </div>

      <div class="container-sm m-6 pt-2">
        <p class="highlighted-text fs-1 mt-3">Organiser</p>
        <form
          action="{{#isEditing}}/admin/organiser/update/{{orgId}}{{/isEditing}}{{^isEditing}}/admin/organiser/new{{/isEditing}}"
          method="POST"
        >
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="name"
              value="{{#organiser}}{{name}}{{/organiser}}"
            />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="name@example.com"
              value="{{#organiser}}{{email}}{{/organiser}}"
            />
          </div>

          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input
              type="tel"
              class="form-control"
              id="phone"
              name="phone"
              value="{{#organiser}}{{phone}}{{/organiser}}"
            />
          </div>

          <div class="mb-3">
            <label for="bio" class="form-label">Bio</label>
            <textarea class="form-control" id="bio" name="bio" rows="4">{{#organiser}}{{bio}}{{/organiser}}</textarea>
          </div>

          <div class="pt-3">
            <button type="submit" class="btn btn-styled">
              {{#isEditing}}Update{{/isEditing}}{{^isEditing}}Create{{/isEditing}} Organiser
            </button>
            <a href="/dashboard" class="btn btn-secondary ms-2">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  <script src="/js/alerts.js"></script>
  </body>
</html>
