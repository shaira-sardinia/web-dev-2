<div class="container mt-4">
  <h1>{{title}}</h1>

  {{#errors}}
  <div class="alert alert-danger">{{errors}}</div>
  {{/errors}}

  <form
    action="{{#isEditing}}/admin/update-organiser/{{orgId}}{{/isEditing}}{{^isEditing}}/admin/new-organiser{{/isEditing}}"
    method="POST"
  >
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="{{#organiser}}{{name}}{{/organiser}}" />
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="{{#organiser}}{{email}}{{/organiser}}" />
    </div>

    <div class="mb-3">
      <label for="phone" class="form-label">Phone</label>
      <input type="tel" class="form-control" id="phone" name="phone" value="{{#organiser}}{{phone}}{{/organiser}}" />
    </div>

    <div class="mb-3">
      <label for="bio" class="form-label">Bio</label>
      <textarea class="form-control" id="bio" name="bio" rows="4">{{#organiser}}{{bio}}{{/organiser}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">
      {{#isEditing}}Update{{/isEditing}}{{^isEditing}}Create{{/isEditing}} Organiser
    </button>
    <a href="/admin/" class="btn btn-secondary">Cancel</a>
  </form>
</div>
