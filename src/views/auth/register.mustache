<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body class="container">
    {{> header }}

    <h1>{{title}}</h1>
    <form method="post" action="/register">
      <div class="form-group">
        {{user-name-error}}
        <label for="email">Email Address</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="example@email.com" required />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Enter minimum 8 characters"
          minlength="8"
          required
        />
      </div>
      <div class="form-group">
        <div class="form-group">
          {{name-error}}
          <label for="username">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Firstname Surname" required />
        </div>

        <div class="form-group">
          {{phone-error}}
          <label for="username">Phone Number</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="" required />
        </div>

        <div class="form-group">
          {{address-error}}
          <label for="username">Full Address</label>
          <input
            type="text"
            class="form-control"
            id="address"
            name="address"
            placeholder=""
            required
          />
        </div>

        <input type="submit" value="Register" class="btn btn-primary" />
      </div>
    </form>

    {{> footer }}

    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
